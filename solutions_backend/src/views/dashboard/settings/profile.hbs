{{>_modalProfile}}
{{>_ConfirmAccount}}
<div class="container mt-5">
    <div class="card mt-5">
        <div class="card-body">
            {{>_msg}}
            <div class="row">
                <div class="col-sm-4 mt-5">
                    <div class="row">
                        <div class="col"></div>
                        <div class="col">
                            <a data-target="#imgProfile" href="">
                                <img src="/images/profile/profile.png"
                                    alt="Foto Perfil" class="" style="border-radius:50%;" width="250">
                            </a>
                            <div class="form-group col-10 ml-4">
                                {{#if SUPERUSER}}
                                <button type="button" data-toggle="modal" data-target="#imgProfile"
                                    class="btn btn-outline-dark col-12 mt-3" style="border-radius: 5px;">Carregar
                                    Imagem</button>
                                {{/if}}
                            </div>
                        </div>
                        <div class="col"></div>
                    </div>
                </div>
                <div class="col-sm-8 mt-4">
                    <hr>
                    <h3 class="card-text">Perfil</h3>
                    <hr>
                    <form action="/profile/basic" method="post">
                        <div class="row">
                            <div class="form-group col-sm-12 col-md-12 col-xl-4">
                                <label for="username">Username</label>
                                <input type="text" name="username" id="username" class="form-control"
                                    value="{{admin.username}}" placeholder="Digite seu username">
                            </div>
                            <div class="form-group col-sm-12 col-md-12 col-xl-5">
                                <label for="name">Nome</label>
                                <input type="text" name="name" id="name" class="form-control"
                                    value="{{admin.name}}" placeholder="Digite seu nome">
                            </div>
                            <div class="form-group col-sm-12 col-md-12 col-xl-3 mt-3">
                                <button type="button" class="btn btn-outline-dark mt-3 col-12" data-bs-toggle="modal"
                                    data-bs-target="#ConfirmAccount">Trocar Senha</button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-12">
                                <button class="btn btn-dark col-12">Enviar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>